#include <Servo.h>

const int trigPin = 10;
const int echoPin = 11;
const int servoPin = 12;

const int servoMin = 15;
const int servoMax = 165;
const int servoDelay = 20;

long duration;
int distance;

Servo myServo;

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  Serial.begin(9600);
  myServo.attach(servoPin);
}

void loop() {
  scan(servoMin, servoMax, 1);   // Sweep from 15째 to 165째
  scan(servoMax, servoMin, -1);  // Sweep from 165째 to 15째
}

void scan(int from, int to, int step) {
  for (int angle = from; angle != to; angle += step) {
    myServo.write(angle);
    delay(servoDelay);
    
    distance = getDistance();
    
    Serial.print(angle);
    Serial.print(",");
    Serial.print(distance);
    Serial.print(".");
  }
}

int getDistance() {
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH, 25000); // timeout for stability (25ms max)
  if (duration == 0) return 999; // Timeout case: no object detected

  return duration * 0.034 / 2; // Convert to cm
}
